<turbo-frame id="modulo_form">
  <%= form_with(model: modulo, url: modulo.new_record? ? seguridad_modulos_path : seguridad_modulo_path(modulo), method: modulo.new_record? ? :post : :patch, class: 'contents') do |f| %>

    <%= fieldset_tag '', class: 'fieldset' do %>

      <h2 class="card-title text-lg">
        <%= modulo.new_record? ? "Agregar nuevo módulo" : "Actualizar módulo" %>
      </h2>

      <%= f.label :nombre, 'Nombre del módulo', class: 'label' %>
      <%= f.text_field :nombre, class: 'input w-full', placeholder: 'Nombre' %>

      <%= f.label :link_to, 'URL', class: 'label' %>
      <%= f.text_field :link_to, class: 'input w-full', placeholder: 'URL' %>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.label :icono, 'Ícono', class: 'label' %>
          <%= f.text_field :icono, class: 'input w-full', placeholder: 'Ícono' %>
        </div>

        <div class="flex justify-center items-end">
          <%= f.label :pasivo, class: 'label flex items-center gap-2' do %>
            <%= f.check_box :pasivo, class: 'checkbox' %> Pasivo
          <% end %>
        </div>
      </div>

      <div class="mt-4 flex justify-end">
        <%= f.submit "Guardar", class: "btn btn-primary" %>
      </div>

    <% end %>

  <% end %>
</turbo-frame>
