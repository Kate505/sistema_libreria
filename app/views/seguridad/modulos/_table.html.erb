<table class="table">
  <thead>
  <tr>
    <th>ID</th>
    <th>Nombre</th>
    <th>Ícono</th>
    <th>URL</th>
    <th>Pasivo</th>
    <th>Acciones</th>
  </tr>
  </thead>

  <tbody>
  <% modulos.each do |modulo| %>
    <tr class="hover:bg-base-300">
      <td><%= modulo.id %></td>
      <td><%= modulo.nombre %></td>
      <td><%= modulo.icono %></td>
      <td><%= modulo.link_to %></td>
      <td>
        <input type="checkbox" class="checkbox" disabled <%= "checked" if modulo.pasivo %>
          />
      </td>

      <td class="flex gap-2">
        <%= link_to edit_seguridad_modulo_path(modulo),
                    data: { turbo_frame: "modulo_form" },
                    class: "btn btn-sm btn-square" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 16 16">
            <title xmlns="">pencil-square</title>
            <g fill="currentColor">
              <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
              <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
            </g>
          </svg>
        <% end %>

        <%= link_to seguridad_modulo_path(modulo),
                    data: {
                      turbo_method: :delete,
                      turbo_confirm: "¿Eliminar este módulo?"
                    },
                    class: "btn btn-sm btn-square" do %>
          <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 16 16"><title>trash</title>
            <g fill="#ff0000">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
              <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
            </g>
          </svg>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
