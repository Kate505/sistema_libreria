<div class="flex flex-col h-full min-h-0 px-8 w-full">
  <div class="border-t pt-4 border-base-300 shrink-0">
    <div class="flex h-8 items-center px-4">
      <h1 class="text-3xl font-bold">Gestión de Módulos</h1>
    </div>
  </div>

  <div class="flex-1 grid grid-cols-3 gap-6 mt-6 min-h-0 py-4">

    <div class="card bg-base-100 shadow-2xl">
      <div class="card-body">
        <%= render "form", modulo: @modulo %>
      </div>
    </div>

    <div class="col-span-2 card bg-base-100 p-4 shadow-2xl flex flex-col min-h-0">
      <div class="flex-1 overflow-y-auto min-h-0" id="modulos_table">
        <%= render "table", modulos: @modulos %>
      </div>
    </div>

  </div>
</div>
