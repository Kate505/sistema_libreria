<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag 'logo_401.png', class: "mx-auto h-10 w-auto", alt: "Logo" %>
    <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-gray-900">Librería Pequeños Detalles</h2>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_with model: @user, url: registrations_url, class: 'space-y-6 bg-blue/30 backdrop-blur-md' do |f| %>
      <div>
        <%= f.label :email_address, 'Usuario', class: "block text-sm/6 font-medium text-gray-900" %>
        <div class="mt-2">
          <%= f.email_field :email_address, value: params[:email_address], autofocus: true, placeholder: 'Usuario',
                            class: "block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6", required: true, autocomplete: 'username' %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <%= f.label :password, 'Contraseña', class: 'block text-sm/6 font-medium text-gray-900' %>
          <div class="text-sm">
            <%= link_to "¿Olvidó su Contraseña?", new_password_path, class: "font-semibold text-indigo-600 hover:text-indigo-500" %>
          </div>
        </div>
        <div class="mt-2">
          <%= f.password_field :password, class: 'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                               autocomplete: 'current-password', required: true, placeholder: 'Contraseña', maxlength: 72 %>
        </div>
      </div>

      <div>
        <%= f.label :password_confirmation, 'Confirmar contraseña', class: 'block text-sm/6 font-medium text-gray-900' %>
        <div class="mt-2">
          <%= f.password_field :password_confirmation, class: 'block w-full rounded-md bg-white px-3 py-1.5 text-base text-gray-900 outline-1 -outline-offset-1 outline-gray-300 placeholder:text-gray-400 focus:outline-2 focus:-outline-offset-2 focus:outline-indigo-600 sm:text-sm/6',
                               autocomplete: 'current-password', required: true, placeholder: 'Contraseña', maxlength: 72 %>
        </div>
      </div>

      <div>
        <%= f.submit "Iniciar Sesión", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm/6 font-semibold text-white shadow-xs hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600" %>
      </div>
    <% end %>
  </div>
</div>

